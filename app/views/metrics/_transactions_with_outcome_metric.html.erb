<div class="m-metric m-metric__transactions-with-outcome">
  <ul class="list">
    <%= metric_item(Metrics::Items::TransactionsEndingInOutcome, transactions_with_outcome_metric.count, html: { class: 'm-metric-headline' }) do |item| %>
      <% item.description do %>
        <strong><%= metric_to_human(transactions_with_outcome_metric.count) %></strong> transactions ending in an outcome
      <% end %>

      <span class="total">
        <span class="metric-name bold-medium">
          <a href="javascript:0" class="a-metric-guidance-expand" data-behaviour="a-metric-guidance-toggle">Transactions processed</a>
        </span>
        <span class="metric-value bold-medium"><%= metric_to_human(transactions_with_outcome_metric.count) %>
        </span>

        <% if @metrics.show_completeness? && !metric_group.totals?  %>
          <%= item.incomplete transactions_with_outcome_metric.completeness %>
        <% end %>
      </span>
    <% end %>

    <%= metric_item(Metrics::Items::TransactionsEndingInOutcomeWithIntendedOutcome, transactions_with_outcome_metric.count_with_intended_outcome) do |item| %>
      <% item.description do %>
        <strong><%= metric_to_human(transactions_with_outcome_metric.count_with_intended_outcome) %></strong>with the user's intended outcome (<%= metric_to_percentage(transactions_with_outcome_metric.with_intended_outcome_percentage) %>)
      <% end %>

      <span class="metric-name">with the user&apos;s intended outcome</span>
      <span class="metric-value">
        <%= item.value %>
        <%= item.percentage transactions_with_outcome_metric.with_intended_outcome_percentage %>
        <% if @metrics.show_completeness? && !metric_group.totals?  %>
          <%= item.completeness transactions_with_outcome_metric.completeness['intended'] %>
        <% end %>
      </span>
    <% end %>

    <% if transactions_with_outcome_metric.not_with_intended_outcome %>
      <%= metric_item(Metrics::Items::TransactionsEndingInOutcomeWithIntendedOutcome, transactions_with_outcome_metric.not_with_intended_outcome) do |item| %>
        <% item.description do %>
          <strong><%= metric_to_human(transactions_with_outcome_metric.not_with_intended_outcome) %></strong>not with the user's intended outcome (<%= metric_to_percentage(transactions_with_outcome_metric.not_with_intended_outcome_percentage) %>)
        <% end %>

        <span class="metric-name">not with the user&apos;s intended outcome</span>
        <span class="metric-value">
          <%= item.value %>
          <%= item.percentage transactions_with_outcome_metric.not_with_intended_outcome_percentage %>
          <% if @metrics.show_completeness? && !metric_group.totals?  %>
            <%= item.completeness transactions_with_outcome_metric.completeness['intended'] %>
          <% end %>
        </span>
      <% end %>
    <% end %>
  </ul>
</div>

